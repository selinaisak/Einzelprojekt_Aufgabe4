<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtMatrikelnr"
        android:layout_width="336dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="450dp"
        android:ems="10"
        android:text=" Gib deine Matrikelnummer ein:"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxtMatrikelnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="450dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/txtMatrikelnr"
        app:layout_constraintRight_toRightOf="@+id/txtMatrikelnr"
        app:layout_constraintTop_toBottomOf="@+id/txtMatrikelnr" />

    <Button
        android:id="@+id/btnAbschicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="380dp"
        android:text="Abschicken"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/txtMatrikelnr"
        app:layout_constraintRight_toRightOf="@+id/txtMatrikelnr"
        app:layout_constraintTop_toBottomOf="@+id/editTxtMatrikelnr" />

    <Button
        android:id="@+id/btnBerechnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="380dp"
        android:text="Berechnen"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnAbschicken"
        app:layout_constraintRight_toRightOf="@+id/txtMatrikelnr"
        app:layout_constraintTop_toBottomOf="@+id/editTxtMatrikelnr"
        app:layout_constraintVertical_bias="0.529" />

    <TextView
        android:id="@+id/txtAntwort1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:text="Antwort vom Server:"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/txtMatrikelnr"
        app:layout_constraintRight_toRightOf="@+id/txtMatrikelnr"
        app:layout_constraintTop_toBottomOf="@+id/editTxtMatrikelnr" />

    <TextView
        android:id="@+id/txtAntwort2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="175dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/txtAntwort1"
        app:layout_constraintRight_toRightOf="@+id/txtAntwort1"
        app:layout_constraintTop_toBottomOf="@+id/txtAntwort1" />

</android.support.constraint.ConstraintLayout>

